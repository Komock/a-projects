{
	"rules": {
		"users": {
			"$uid": {
				".read": "auth.uid == $uid",
				".write": "auth.uid == $uid"
			},
			".indexOn": ["email"]
		},
		"projects": {
			".read": "auth.uid !== null",
			".write": "auth.uid !== null",
			"$projectId": {
				".read": "data.child('authorId').val() == auth.uid",
				".write": "data.child('authorId').val() == auth.uid"
			},
			".indexOn": ["authorId"]
		}
	}
}
